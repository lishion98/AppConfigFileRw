<UserControl x:Class="AppConfigFileRw.AttributeDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppConfigFileRw"
             mc:Ignorable="d" 
             d:DesignHeight="30">
    <StackPanel Orientation="Horizontal" Margin="5">
        <TextBlock Background="AliceBlue" Width="100" x:Name="x_attributeName"/>
        <TextBox Width="100" Margin="5,0,0,0" x:Name="x_attributeValue"/>
        <Button Content="保存" Margin="5,0,0,0" Click="Button_Click"/>
    </StackPanel>
</UserControl>
